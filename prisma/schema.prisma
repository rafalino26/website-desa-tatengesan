generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model InformasiKontak {
  id        String   @id
  alamat    String
  telepon   String
  email     String
  jam       String
  facebook  String?
  instagram String?
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model PageContent {
  id        String   @id
  slug      String   @unique
  content   String
  updatedAt DateTime
}

model PesanKontak {
  id        String   @id
  nama      String
  email     String
  isiPesan  String
  isDibaca  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id
  title     String
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model ProfesiSnapshot {
  id         String   @id
  capturedAt DateTime @default(now())
  items      Json?
}

model ProfilGeografis {
  id              String   @id
  deskripsiLokasi String
  batasUtara      String?
  batasTimur      String?
  batasSelatan    String?
  batasBarat      String?
  googleMapsUrl   String?
  updatedAt       DateTime
  createdAt       DateTime @default(now())
  bujurTimur      String?
  hidrologi       String?
  ketinggian      String?
  klimatologi     String?
  lintangUtara    String?
  topografi       String?
}

model ProfilHero {
  id        String   @id
  title     String
  subtitle  String
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model ProfilIdentitas {
  id             String   @id
  namaDesa       String
  kecamatan      String
  kabupaten      String
  provinsi       String
  kodePos        String?
  kodeKemendagri String?
  koordinat      String?
  kepalaDesa     String?
  catatan        String?
  updatedAt      DateTime
  createdAt      DateTime @default(now())
}

model ProfilPerangkatDesa {
  id        String   @id
  nama      String
  jabatan   String
  urutan    Int
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model ProfilSejarah {
  id        String   @id
  content   String
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model ProfilSosialEkonomi {
  id                     String   @id
  ringkasan              String
  mataPencaharian        String?
  sektorPendukung        String?
  catatan                String?
  jumlahPendudukTekstual String?
  catatanPenduduk        String?
  updatedAt              DateTime
  createdAt              DateTime @default(now())
}

model ProfilVisiMisi {
  id        String   @id
  visi      String
  misi      Json
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model Statistik {
  id              String   @id
  jumlahPenduduk  Int
  luasWilayah     Float
  updatedAt       DateTime
  jumlahDusun     Int      @default(0)
  jumlahKK        Int      @default(0)
  updatedDusun    DateTime @default(now())
  updatedKK       DateTime @default(now())
  updatedPenduduk DateTime @default(now())
  updatedWilayah  DateTime @default(now())
}

model User {
  id           String   @id
  email        String   @unique
  nama         String
  passwordHash String
  createdAt    DateTime @default(now())
}

model BeritaTatengesan {
  id        String   @id @default(cuid())
  slug      String   @unique
  judul     String
  ringkasan String?  @db.Text
  isi       String   @db.Text
  coverUrl  String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
